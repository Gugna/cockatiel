---
import logo from '../images/logo1.jpg?url';
---

<header class="header">
    <div class="container">
        <div class="logo">
            <a href="/">
                <img src={logo} alt="Logo" />
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/cocktails">Cocktails</a></li>
                <li><a href="/syrups">Syrups</a></li>
            </ul>
        </nav>
    </div>
    
</header>

<style>
    .header {
        height: 70px;
        background: teal;
    }

    .header .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
    }

    .header img {
        height: 45px;
        vertical-align: middle;
    }

    .header nav ul {
        display: flex;
    }

    .header nav ul li {
        padding: 0 10px;
    }

    .header nav ul li a {
        color: #fff;
    }
    
</style>