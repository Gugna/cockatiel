---
import Layout from '../layouts/layout.astro';
import cocktails from '../components/cocktails.json';
---
<Layout>
    <h1>Cocktails (under cosnstruction)</h1>
    <ul>
        {cocktails.map((cocktail) => <li><div class="cocktail"><img src={cocktail.image}/><p>{cocktail.cocktailName}</p></div></li>)}
    </ul>


</Layout>

<style>
    ul img {
        width: 150px;
        height: 150px;
        margin-top: 10px;
    }

    ul {
        display: flex;
        justify-content: space-evenly;
    }

    .cocktail {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 170px;
        box-shadow: 5px 3px 3px 3px #000;
    }

</style> 